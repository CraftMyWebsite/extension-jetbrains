<idea-plugin>
    <id>fr.craftmywebsite.extension</id>
    <name>CraftMyWebsite - IDE Extension</name>
    <version>1.0.0</version>


    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>

    <description>
        <![CDATA[
      <h2>CraftMyWebsite - IDE Extension</h2>
      <p>CrafyMyWebite framework extension support.</p>

        <h3>Features:</h3>
            <ul>
            <li>Create Themes</li>
            <li>Create Packages</li>
            <li>Create Managers</li>
            <li>Shortcuts</li>
            <li>And more soon...</li>
        </ul>

        <h3>Documentation:</h3>
        <span>Soon...</span>

        <h3>Support:</h3>
        <a href="https://craftmywebsite.fr/discord">CraftMyWebsite Discord</a>

        <h3>Contribute:</h3>
        <span>Soon...</span>
    ]]>
    </description>
    <change-notes>
        <![CDATA[
      <ul>
        <li><b>1.0.0</b> Release CraftMyWebsite IDE Extension</li>
      </ul>
    ]]>
    </change-notes>

    <vendor url="https://craftmywebsite.fr">CraftMyWebsite</vendor>

    <actions>
        <group id="fr.craftmywebsite.actions.dialogs.CustomFileGroup"
               text="CraftMyWebsite"
               icon="/icons/toolWindow.svg"
               description="Create different files for CraftMyWebsite"
               popup="true">

            <add-to-group group-id="NewGroup" anchor="first"/>

            <action id="fr.craftmywebsite.actions.dialogs.packages.files.ControllerDialog"
                    class="fr.craftmywebsite.actions.dialogs.packages.files.ControllerDialog"
                    text="Create Controller"
                    description="Creates a new Controller file"/>

            <action id="fr.craftmywebsite.actions.dialogs.packages.files.ModelDialog"
                    class="fr.craftmywebsite.actions.dialogs.packages.files.ModelDialog"
                    text="Create Model"
                    description="Creates a new Model file"/>

            <action id="fr.craftmywebsite.actions.dialogs.packages.files.EntityDialog"
                    class="fr.craftmywebsite.actions.dialogs.packages.files.EntityDialog"
                    text="Create Entity"
                    description="Creates a new Entity file"/>

            <action id="fr.craftmywebsite.actions.dialogs.packages.files.AdminViewDialog"
                    class="fr.craftmywebsite.actions.dialogs.packages.files.AdminViewDialog"
                    text="Create Admin View"
                    description="Creates a new Admin View file"/>

            <action id="fr.craftmywebsite.actions.dialogs.packages.files.EventDialog"
                    class="fr.craftmywebsite.actions.dialogs.packages.files.EventDialog"
                    text="Create Event"
                    description="Creates a new Event file"/>

            <action id="fr.craftmywebsite.actions.dialogs.packages.files.TypeDialog"
                    class="fr.craftmywebsite.actions.dialogs.packages.files.TypeDialog"
                    text="Create Type"
                    description="Creates a new Type file"/>

            <action id="fr.craftmywebsite.actions.dialogs.packages.files.InterfaceDialog"
                    class="fr.craftmywebsite.actions.dialogs.packages.files.InterfaceDialog"
                    text="Create Interface"
                    description="Creates a new Interface file"/>

            <action id="fr.craftmywebsite.actions.dialogs.packages.files.ExceptionDialog"
                    class="fr.craftmywebsite.actions.dialogs.packages.files.ExceptionDialog"
                    text="Create Exception"
                    description="Creates a new Exception file"/>


            <action id="fr.craftmywebsite.actions.dialogs.packages.files.ImplementationDialog"
                    class="fr.craftmywebsite.actions.dialogs.packages.files.ImplementationDialog"
                    text="Create Implementation"
                    description="Creates a new Implementation based on interface"/>

        </group>
    </actions>


</idea-plugin>